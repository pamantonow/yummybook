<%=bootstrap_form_for(@user, action: "create") do |f|%>
 <div class="col-2">
  <label>
    <%=f.text_field :username %>
  </label>
  <div class="col-2">
    <label>
      <%=f.text_field :email%>
    </label>
  <div class="col-2">
    <label>
      <%=f.text_field :password %>
    </label>
  </div>

    <%if @errors %>
      <%@errors %>
    <% end %>
    <div class="col-submit">
      <%=f.submit "Register"%>
    </div>
<% end %>